@model List<Energy_Insights.Models.AboutUsModel>


@{
    ViewData["Title"] = "About Us - Global Energy Insights";
    ViewData["header"] = "Global Energy Insights";
    ViewData["header_content"] = "Unlocking the World of Energy: Explore Country-Specific Energy Production and Insights to Foster Environmental Awareness and Sustainable Practices Across the Globe";
    
}
    




   
   

    <!-- About Us Section -->
    
        <div class="row row-content">
            <div class="col text-center">
                <h2 class="mt-3">About Us</h2>
                <div class="row">
                    @foreach (var member in Model)
                    {
                        <div class="col-md-6">
                            <img src="@member.ImageUrl" class="img-fluid rounded-circle" alt="@member.Name" style="width: 200px; height: 200px;">
                            <h4><a href="@member.GitHubUrl"><img src="~/img/gitlogo.png" alt="GitHub" height="20px" width="20px"></a> @member.Name</h4>
                            <p>@member.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    

    <!-- Data Model Image Section -->
    <div class="row mt-4 justify-content-center">
        <div class="col-md-8 text-center">
            <h3>Our Data Model</h3>
            <img src="~/img/datamodel_1.png" class="img-fluid" alt="Our Data Model" style="max-width: 100%; height: auto;">
        </div>
    </div>

    

    <!-- Scripts -->
    <script src="~/node_modules/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>


