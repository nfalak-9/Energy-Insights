        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand mr-auto" href="#"><img src="~/img/logo.png" height="30" width="41"></a>
            <div class="collapse navbar-collapse" id="Navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"> <span class="fa fa-home fa-lg"> </span>Home</a> </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "RenewableResources" ? "active" : "")"><a class="nav-link" asp-area="" asp-controller="RenewableResources" asp-action="Index"> <span class="fa fa-list fa-lg"> </span>Renewable Resources</a> </li>
                    <li class="nav-item" @(ViewContext.RouteData.Values["Controller"].ToString() == "NonRenewableResources" ? "active" : "")><a class="nav-link" asp-area="" asp-controller="NonRenewableResources" asp-action="Index"> <span class="fa fa-list fa-lg"> </span>Non Renewable Resources</a> </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "TotalEnergyProduction" ? "active" : "")"><a class="nav-link" asp-area="" asp-controller="TotalEnergyProduction" asp-action="Index"> <span class="fa fa-list fa-lg"> </span>Total Energy Production</a> </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "AboutUs" ? "active" : "")"><a class="nav-link" asp-area="" asp-controller="AboutUs" asp-action="Index"> <span class="fa fa-info fa-lg"> </span>About Us</a> </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header -->
    <header class="jumbotron">
        <div class="container">
            <div class="row row-header">
                <div class="col-12 col-sm-6">
                    <h1>@ViewData["header"]</h1>
                    <p>@ViewData["header_content"]</p>
                </div>
                <div class="col-6 col-sm-6 text-right align-self-center">
                    <img src=@Url.Content(ViewBag.LogoPath) class="img-fluid">
                </div>
            </div>
        </div>
    </header>

    <div class="container">

        <main role="main" class="pb-3">

            @RenderBody()

        </main>

    </div>

